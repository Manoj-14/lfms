                                        <input placeholder=" " class="submit" type="submit" value="Sign In">
                                    </div>

                                    <div class="sub-head">
                                        <spam>or</spam>
                                        <h3>Sign IN</h3>
                                        <spam>as</spam>
                                    </div>
                                    <div class="material-textfield" id="other-sign">
                                        <div class="sign-link">
                                            <a href="/admin-login" id="ngo">Admin</a>
                                        </div>
                                        <div class="sign-link">
                                            <a href="/restaurant-login" id="restaurant">Restaurant</a>
                                        </div>
                                    </div>
                                </form>
                                <div>
            </section>

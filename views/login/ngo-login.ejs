                <%- include('../partials/quote-script.ejs'); %>
                    <div class="admin-log">
                        <h1>NGO Login</h1>
                        <% if (status) { %>
                            <p class="danger setTimer">
                                <%= status %>
                            </p>
                            <% } %>
                                <form class="admin-login" action="/ngoAuth" method="post" autocomplete="off">
                                    <div class="material-textfield">
                                        <input placeholder=" " required name="ngoEmail" class="ngo-user" type="email">
                                        <label>Email</label>
                                    </div>
                                    <div class="material-textfield">
                                        <input placeholder=" " required name="ngoPassword" class="ngo-pass"

                <section class="reg-class" id="regDet">
                    <div class="add-rest ">
                        <h2 class="dash-nav-title " style="padding-top: 0;">
                            Change Password
                        </h2>
                        <form class="admin-login" id="change_pass" action="/rest-change-pass" method="post"
                            autocomplete="off">
                            <div class="material-textfield">
                                <input placeholder=" " required name="cur_pass" id="pass_cur" class="guest-name"
                                    type="text">

                                <label>New Password</label>
                            </div>
                            <div class="material-textfield">
                                <input placeholder=" " required name="con_pass" id="pass_con" class="guest-name"
                                    type="text">
                                <label>Confirm new Password</label>
                            </div>
                            <div class="material-textfield">
                                <input placeholder=" " class="submit" type="submit" id="check_pass_btn" value="Change">
                            </div>
                            <div class="material-textfield">
                                <input placeholder=" " type="button" class=" btn btn-danger" onclick="dispCls('regDet')"
                                    value="Close">
                            </div>
                        </form>
                    </div>
                </section>
                <div class="add-don">
                    <h3 id="sub-heading">Send Food</h3>
                    <% if (status) { %>
                        <p class="success setTimer">
                            <%= status %>
                        </p>
                        <% } %>
                            <form class="admin-login" id="pad-btm" action="/rest-orders" method="post" autocomplete="off">
